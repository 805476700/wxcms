/**index.wxss**/
.tr {
  margin:0px;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
  width:33.3%;
  justify-content: center;
  text-align: center;
  margin:0px;
}
.controls {
  position: relative;
  top: 50%;
  height: 50px;
  margin-top: -25px;
  display: flex;
}
.play,.pause,.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: center;
  background-color: rgba(238, 14, 51, 0.5);
  color: rgb(246, 250, 249);
  line-height: 50px;
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}
